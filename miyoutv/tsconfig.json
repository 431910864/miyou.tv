{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "baseUrl": "../node_modules",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "src/index.ts",
    "src/main.ts",
    "src/vendor.ts",
    "src/**/*.*.ts"
  ]
}
